<% title=" : New Listing" %>
<% layout("/layouts/boilerplate.ejs") %>
<h2>List your place</h2>
<div class="row">
        <div class="col-8 offset-2">
                <form action="/listings" method="post" novalidate enctype="multipart/form-data" class="needs-validation">
                        <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input name="listing[title]" required class="form-control" placeholder="Enter Title" type="text">
                                <div class="invalid-feedback">Title is required</div>
                        </div>
                        <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="listing[description]" class="form-control"
                                        placeholder="Enter Description" required type="text"></textarea>
                                <div class="invalid-feedback">Description is required</div>
                        </div>
                        <div class="row">
                        <!-- <div class="mb-3 col-md-4">
                                <label for="filename" class="form-label">Filename</label>
                                <input name="listing[image][filename]" required class="form-control" placeholder="Enter Image Filename"
                                        type="text">
                                <div class="invalid-feedback">Filename is required</div>
                        </div> -->
                        <!-- <div class="mb-3 col-md-8">
                                <label for="url" class="form-label">Link/URL</label>
                                <input name="listing[image][url]" required class="form-control" placeholder="Enter Image URL/Link"
                                        type="url">
                                <div class="invalid-feedback">URL is required</div>
                        </div> -->
                        <div class="mb-3 col-md-8">
                                <label for="url" class="form-label">Image</label>
                                <input name="listing[image][url]" required class="form-control" type="file">
                                <div class="invalid-feedback">Image is required</div>
                        </div>
                        </div>
                        <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input name="listing[price]" class="form-control" placeholder="Enter Price"
                                        required type="number">
                                <div class="invalid-feedback">Price is required</div>
                        </div>
                        <div class="row">
                        <div class="mb-3 col-md-8">
                                <label for="location" class="form-label">Location</label>
                                <input name="listing[location]" required class="form-control" placeholder="Enter Lcation"
                                        type="text">
                                <div class="invalid-feedback">Location is required</div>
                        </div>
                        <div class="mb-3 col-md-4">
                                <label for="country" class="form-label">Country</label>
                                <input name="listing[country]" required class="form-control" placeholder="Enter Country"
                                        type="text">
                                <div class="invalid-feedback">Country is required</div>
                        </div>
                        </div>   
                        <button class="btn btn-dark add-btn">List</button>
                </form>
        </div>
</div>