<% title=" : Edit " +listing.title.toString().toUpperCase() %>
<% layout("/layouts/boilerplate.ejs") %>
<h2 class="">Edit Details</h2>
<div class="row">
        <div class="col-8 offset-2">
                <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate enctype="multipart/form-data" class="needs-validation">
                        <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input name="listing[title]" class="form-control" required value='<%= listing.title %>'
                                        placeholder="Enter Title" type="text">
                                <div class="invalid-feedback">Title is required</div>
                        </div>
                        <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="listing[description]" required class="form-control"
                                        placeholder="Enter Description"
                                        type="text"><%= listing.description %></textarea>
                                <div class="invalid-feedback">Description is required</div>
                        </div>

                        <div class="row">
                                <label for="">Image</label>
                                <div class="card edit-listing-card ">
                                        <img src="<%= originalImage %>" class="edit-card-img-top show-img mb-2"
                                                alt="<%= listing.image.filename %>">
                                        <div class="mb-3 col-md-8">
                                                <label for="image[url]" class="form-label">Want to change!</label>
                                                <input name="listing[image][url]" class="form-control"
                                                        placeholder="Enter Image URL/Link" type="file">
                                                <div class="invalid-feedback">Image is required</div>
                                        </div>
                                </div>
                        </div>

                        <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input name="listing[price]" class="form-control" required value='<%= listing.price %>'
                                        placeholder="Enter Price" type="number">
                                <div class="invalid-feedback">Price is required</div>
                        </div>
                        <div class="row">
                                <div class="mb-3 col-md-8">
                                        <label for="location" class="form-label">Location</label>
                                        <input name="listing[location]" required class="form-control"
                                                value='<%= listing.location %>' placeholder="Enter Lcation" type="text">
                                        <div class="invalid-feedback">Location is required</div>
                                </div>
                                <div class="mb-3 col-md-4">
                                        <label for="country" class="form-label">Country</label>
                                        <input name="listing[country]" required class="form-control"
                                                value='<%= listing.country %>' placeholder="Enter Country" type="text">
                                        <div class="invalid-feedback">Country is required</div>
                                </div>
                        </div>
                        <button class="btn btn-dark edit-btn">Update</button>
                </form>
        </div>
</div>