<% title = "" %>
<% layout("/layouts/boilerplate.ejs") %>
<body>
        <h1>All listings</h1>
        <!-- <form action="/listings/new" method="GET">
                <button>New listing</button>
        </form> -->
        <div class="row row-cols-xxl-5 row-cols-xl-4 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1" >
                <% for (let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link"><div class="card listing-card col" >
                        <img src= "<%= listing.image.url %>" class="card-img-top" style="height: 15rem;" alt="<%= listing.image.title %>">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                                <b><%= listing.title %></b> <br>
                                <%= listing.location %>,<%= listing.country %> <br>
                                &#8377;<%= listing.price.toLocaleString("en-IN") %> /night<br>
                        </div>
                </div></a>
                <% } %>
        </div>
</body>