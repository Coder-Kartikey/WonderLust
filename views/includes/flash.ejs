<% if ( success && success.length) { %> 
        <div class="alert alert-success d-flex align-items-center mt-3 alert-dismissible fade show col-md-6 offset-3 flash-message" role="alert">
                <i class="bi flex-shrink-0 me-2 fa-solid fa-circle-check" style="color: #B197FC;" role="img" aria-label="Info:"></i>
                <div>
                  <%= success %>
                </div>
                <button type="button" class="btn-close " style="border: 0;" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
<% } %>

<% if ( error && error.length) { %> 
        <div class="alert alert-danger d-flex align-items-center mt-3 alert-dismissible fade show col-md-6 offset-3 flash-message" role="alert">
                <i class="bi flex-shrink-0 me-2 fa-solid fa-triangle-exclamation" style="color: #ff0505;"></i>
                <div>
                  <%= error %>
                </div>
                <button type="button" class="btn-close " style="border: 0;" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
<% } %>